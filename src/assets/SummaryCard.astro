---
interface Props {
  title: string
  summary: string
}

const { title, summary } = Astro.props
---

<div
  class='flex flex-col w-auto backdrop-blur-lg border border-zinc-200 p-4 rounded-lg shadow-xl'
>
  <span class='text-2xl font-semibold'>{title}</span>
  <span class='text-balance'>
    {summary.length > 70 ? summary.slice(0, 70) + '...' : summary}
  </span>
</div>
